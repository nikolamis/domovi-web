<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dodavanje soba</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
	<h1>Forma za dodavanje</h1>
	
	<section id="izborDoma">
		<label>Izaberite Dom</label>
		<select name="" id="dom">
		<option value="null">Izaberite dom</option>
		{{#if domovi}}
			{{#each domovi}}
			<option value="{{this}}">{{this}}</option>
			{{/each}}
		{{/if}}
		</select>
	</section>
	
	<div>
		<label>Tip sobe</label>
		<input id="tip" required>
	</div>
	
	<div>
		<label>Cena sobe</label>
		<input id="cena" required>
	</div>
	
	<div>
		<label>Kupatilo:</label>
		<select name="" id="kupatiloUSobi">
		<option value="null">Da li je kupatilo u sobi?</option>
		<option value="true">Jeste</option>
		<option value="false">Nije</option>
		</select>
	</div>
	
	<button id="dodaj">Dodaj</button>
	
		
    
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>
    
    let dom=document.querySelector("#dom");
    let tip=document.querySelector("#tip");
    let cena=document.querySelector("#cena");
    let kupatiloUSobi=document.querySelector("#kupatiloUSobi");
    
     document.querySelector("#dodaj").onclick=function(){
   
     let podaci={
     "dom":dom.value,
     "tip":tip.value,
     "cena":cena.value,
     "kupatiloUSobi":kupatiloUSobi.value
    }
    console.log(podaci);
    $.ajax({
    url:"/domovi",
    method:"POST",
    data:podaci,
    success:function(response)
    {
    	alert("soba dodata");
    	location.href="/";    	
    }
    
    
    
    });}
    
   
    
    
    </script>
    
</body>
</html>